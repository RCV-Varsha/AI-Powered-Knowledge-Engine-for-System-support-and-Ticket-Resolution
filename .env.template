# =============================================================================
# AI-Powered Knowledge Engine - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual API keys and configuration

# =============================================================================
# AI MODEL APIS
# =============================================================================

# OpenAI Configuration (Primary LLM)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000

# Google AI Configuration (Secondary LLM)
# Get your API key from: https://ai.google.dev/
GOOGLE_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_MODEL=gemini-1.5-flash

# HuggingFace Configuration (Fallback Models)
# Get your token from: https://huggingface.co/settings/tokens
HF_API_TOKEN=your_huggingface_token_here
HF_MODEL=microsoft/DialoGPT-medium

# =============================================================================
# GOOGLE SERVICES
# =============================================================================

# Google Sheets API (Ticket Logging)
# Create service account at: https://console.cloud.google.com/
GOOGLE_API_CREDENTIALS=path/to/your/service-account-key.json
GOOGLE_SHEET_ID=your_google_sheet_id_here
GOOGLE_SHEET_NAME=AI_Support_Tickets

# Gmail API Configuration (Email Notifications)
GMAIL_CREDENTIALS=path/to/gmail-credentials.json
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# =============================================================================
# EXTERNAL APIS
# =============================================================================

# Tavily Web Search (Latest Information)
# Get your API key from: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here
TAVILY_MAX_RESULTS=5

# Slack Integration (Team Notifications)
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_CHANNEL=#ai-support

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Configuration (Primary Database)
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=ai_support_system

# MongoDB Atlas (Cloud - Alternative)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ai_support_system

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================

# Primary Admin Settings
ADMIN_EMAIL=chakravarshini395@gmail.com
ADMIN_USERNAME=Chakra Varshini
ADMIN_OTP_EXPIRY=300  # 5 minutes in seconds

# Security Settings
JWT_SECRET_KEY=your_jwt_secret_key_here
SESSION_TIMEOUT=3600  # 1 hour in seconds
MAX_LOGIN_ATTEMPTS=3

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Server Configuration
HOST=localhost
PORT=8501
DEBUG=True
LOG_LEVEL=INFO

# File Paths
KB_PATH=kb/
DATA_PATH=data/
VECTORSTORE_PATH=vectorstore/
LOGS_PATH=logs/

# AI Model Preferences
PRIMARY_AI_MODEL=openai
FALLBACK_AI_MODEL=google
ENABLE_WEB_SEARCH=True
ENABLE_KB_SEARCH=True
ENABLE_SEMANTIC_SEARCH=True

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
KB_SIMILARITY_THRESHOLD=0.7
MAX_KB_RESULTS=5

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_TICKET_CATEGORIZATION=True
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_SLACK_NOTIFICATIONS=False
ENABLE_ANALYTICS=True
ENABLE_CACHING=True

# Ticket Processing
AUTO_ASSIGN_CATEGORY=True
AUTO_ESCALATE_THRESHOLD=3
ESCALATION_EMAIL_ENABLED=True

# Knowledge Base
AUTO_SUGGEST_ARTICLES=True
TRACK_ARTICLE_USAGE=True
CONTENT_GAP_ANALYSIS=True

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode Settings (set DEBUG=False for production)
STREAMLIT_SERVER_HEADLESS=False
STREAMLIT_SERVER_ENABLE_CORS=True
STREAMLIT_BROWSER_GATHER_USAGE_STATS=False

# Logging Configuration
LOG_FILE=logs/ai_support_system.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit .env files to version control
# 2. Use strong, unique passwords and API keys
# 3. Regularly rotate API keys and secrets
# 4. Use environment-specific configurations
# 5. Enable 2FA on all service accounts
#
# For production deployment:
# - Set DEBUG=False
# - Use strong JWT secrets
# - Configure proper CORS settings
# - Use environment variables instead of file-based secrets
# =============================================================================